/**index.wxss**/
.container{
  border-top:2rpx solid #eee;
  padding: 20rpx;
}
.add{
  position: relative;
  margin-bottom: 30rpx;
}
.input{
  border:5rpx solid #eee;
  height: 100rpx;
  padding:0 80rpx;
  font-size: 14px;
}
.addImg{
  position: absolute;
  top:0;
  left: 0;
  width: 50rpx;
  height: 50rpx;
  margin:25rpx
}
.list{
  display: flex;
  height: 100rpx;
  padding: 0 20rpx;
  border:4rpx solid #eee;
  border-bottom: none;
  align-items:center
}
.isComplete,.clear{
  flex:1;
}
.text{
  width: 100%;
  padding: 0 15rpx;
}
.listWrap .list:last-of-type{
  border-bottom:4rpx solid #eee;
}

.footer{
  display: flex;
  justify-content:space-between;
  margin-top:50rpx;
  align-items: center;
}

